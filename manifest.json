{
  "manifest_version": 2,
  "name": "GitlabEasyTimeTracking",
  "version": "0.1",

  "description": "Easy time tracking for GitLab.",

  "permissions": [
    "storage",
    "tabs"
  ],

  "icons": {
    "16": "icons/start.png"
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "applications": {
    "gecko": {
      "id": "{403d73be-461f-4ae9-9fa3-54f1b02498a2}"
    }
  },

  "browser_action": {
    "default_icon": "icons/start.png",
    "default_title": "Start tracking",
    "default_popup": "popup/tracking_info.html",
    "browser_style": true
  }
}

